# Schema Project Environment Variables
# Copy this file to .env and update with your values

# Django settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# GIS DATABASE CONFIGURATION
# =============================================================================
# Set USE_POSTGIS=True to use PostgreSQL/PostGIS database for GIS data
# Set USE_POSTGIS=False (or omit) to use file-based GeoPackage storage

USE_POSTGIS=True

# PostgreSQL/PostGIS connection settings (used when USE_POSTGIS=True)
DB_NAME=schema_gis
DB_USER=schema_user
DB_PASSWORD=schema_secure_password_2024
DB_HOST=localhost
DB_PORT=5432

# =============================================================================
# DOCKER QUICK START
# =============================================================================
# 1. Start PostgreSQL + pgAdmin:
#    docker-compose up -d db pgadmin
#
# 2. Access pgAdmin at http://localhost:5050
#    Email: admin@schema.local
#    Password: admin123
#
# 3. Run migrations and import GIS data:
#    set USE_POSTGIS=True
#    python manage.py migrate
#    python manage.py import_gis_data
#
# =============================================================================

# GIS Cache settings
GIS_CACHE_TTL_MINUTES=15
GIS_CACHE_MAX_ITEMS=100
